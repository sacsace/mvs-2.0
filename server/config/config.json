{
  "development": {
    "dialect": "sqlite",
    "storage": "./database.sqlite",
    "define": {
      "timestamps": false,
      "underscored": true
    }
  },
  "test": {
    "dialect": "sqlite",
    "storage": ":memory:",
    "define": {
      "timestamps": false,
      "underscored": true
    }
  },
  "production": {
    "use_env_variable": "DATABASE_URL",
    "dialect": "postgres",
    "dialectOptions": {
      "ssl": {
        "require": true,
        "rejectUnauthorized": false
      }
    },
    "define": {
      "timestamps": true,
      "underscored": true
    }
  }
} 