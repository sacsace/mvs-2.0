{
  "name": "mvs-2.0",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "start:prod": "cd server && node --max-old-space-size=512 --expose-gc --no-warnings dist/index.js",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm install --legacy-peer-deps --force && npm run build",
    "build:client": "cd client && npm install --legacy-peer-deps --force && npm run build",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm start",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "migrate": "cd server && npm run migrate",
    "migrate:undo": "cd server && npm run migrate:undo",
    "init-db": "cd server && npm run init-db",
    "setup-data": "cd server && npm run setup-data",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:build-push": "bash scripts/docker-build.sh",
    "docker:build-push-win": "scripts\\docker-build.bat",
    "docker:pull": "docker-compose -f docker-compose.prod.yml pull",
    "docker:clean": "docker system prune -af --volumes",
    "docker:login": "docker login",
    "docker:tag": "npm run docker:build-push"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
